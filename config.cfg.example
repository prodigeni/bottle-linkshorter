[database]
;the mysql-host
mysql_host: localhost

;the mysql-username
mysql_user: yourusername

;the mysql-password
mysql_password: yourpass

;the mysql-database
mysql_database: yourdb

;the connection timeout in seconds
mysql_connection_timeout: 604800

; times to retry to connect
mysql_connection_retries: 3

[general]
;redirect-target if someone access /, if empty, the index.html-template will be shown
index_redirect: http://google.com/

;root of the short-urls
link_root_url: http://foo.bar/

;comma-seperated list of sha1-hashes
auth_hashes: 0beec7b5ea3f0fdbc95d0dd47f3c5bc275da8a33,62cdb7020ff920e5aa642c3d4066950dd1f01f4d

[piwik]
;domain without http:// or https://
;domain: example.org

;site_id: 0
